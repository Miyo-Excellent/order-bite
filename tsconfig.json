{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./*"
      ],
      "~/*": [
        "src/*"
      ],
      "@assets/*": [
        "src/assets/*"
      ],
      "@data/*": [
        "src/data/*"
      ],
      "@actions/*": [
        "src/data/actions/*"
      ],
      "@loaders/*": [
        "src/data/loaders/*"
      ],
      "@payloads/*": [
        "src/data/payloads/*"
      ],
      "@actionTypes/*": [
        "src/data/types/*"
      ],
      "@states/*": [
        "src/data/states/*"
      ],
      "@slices/*": [
        "src/data/slices/*"
      ],
      "@stores/*": [
        "src/data/stores/*"
      ],
      "@domain/*": [
        "src/domain/*"
      ],
      "@models/*": [
        "src/domain/models/*"
      ],
      "@dataRepositories/*": [
        "src/domain/repositories/*"
      ],
      "@dataServices/*": [
        "src/domain/services/*"
      ],
      "@dataTypes/*": [
        "src/domain/types/*"
      ],
      "@infrastructure/*": [
        "src/infrastructure/*"
      ],
      "@components/*": [
        "src/infrastructure/components/*"
      ],
      "@repositories/*": [
        "src/infrastructure/repositories/*"
      ],
      "@layouts/*": [
        "src/infrastructure/layouts/*"
      ],
      "@services/*": [
        "src/infrastructure/services/*"
      ],
      "@styles/*": [
        "src/infrastructure/styles/*"
      ],
      "@viewmodels/*": [
        "src/infrastructure/viewmodels/*"
      ],
      "@views/*": [
        "src/infrastructure/views/*"
      ],
      "@navigation/*": [
        "src/navigation/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
